<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewS"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardElevation="@dimen/spacing_medium"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/saffron"
            >


            <TextView
                android:id="@+id/txtpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="Developer\n\nJoint Secretary of FACE Club 2016-17"
                android:textColor="#000000"
                android:layout_below="@+id/txtname"
                android:layout_alignLeft="@+id/txtname"
                android:layout_alignStart="@+id/txtname" />



            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akhilesh Anand"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:textStyle="normal|italic" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:padding="7dp"
                android:src="@drawable/develop"
                android:scaleType="centerCrop"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@drawable/stamp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/st"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView2"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@id/card_viewS"
        android:layout_margin="10dp"
        android:textSize="15dp"

        android:textStyle="normal|italic" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/face"
        android:id="@+id/imageView6"
        android:layout_below="@+id/txt"
        android:layout_alignLeft="@+id/txt"
        android:layout_alignStart="@+id/txt"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp" />

    <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
android:layout_marginTop="20dp"
    app:srcCompat="@drawable/lekhani"
        android:layout_marginLeft="16dp"
        android:id="@+id/img7"
        android:layout_below="@+id/txt"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_marginStart="16dp" />
</RelativeLayout>
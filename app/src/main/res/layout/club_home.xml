<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/coldheart">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bell"
                android:layout_marginTop="20dp"
                android:id="@+id/bell"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bell_ring_outline"
                android:layout_marginTop="20dp"
                android:id="@+id/bellring"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view" />


            <TextView
                android:text="Club Mentors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bell"
                android:layout_marginBottom="10dp"

                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view"
                android:id="@+id/textView9" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"

                android:id="@+id/listmentor"
              />


            <TextView
                android:text="Tap to Recieve Notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/bell"
                android:layout_toEndOf="@+id/bell"
                android:id="@+id/bellmsg" />

            <TextView
                android:text="You are receiving Notifications!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#fff"

                android:layout_toRightOf="@+id/bell"
                android:layout_toEndOf="@+id/bell"
                android:id="@+id/bellringmsg" />



            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/listmentor"

                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:cardElevation="@dimen/spacing_medium">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="About the club"
                        android:layout_margin="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:text="Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:id="@+id/txtDescp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar3"
                        android:layout_alignBottom="@+id/txtDescp"
                        android:layout_alignLeft="@+id/txtDescp"
                        android:layout_alignStart="@+id/txtDescp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginStart="85dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_margin="20dp"
                android:layout_below="@id/card_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/fleurs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="131dp"
                android:id="@+id/imageView3" />



        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>


</FrameLayout>